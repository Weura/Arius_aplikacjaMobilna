<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Obrazek pizzy -->
    <ImageView
        android:id="@+id/pizza_image_not"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Pizza Image"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Kolumna z nazwą pizzy, detalami i ceną -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toEndOf="@id/pizza_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/pizza_name_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza name"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pizza_details_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza details"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/pizza_price_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="italic"
            android:textSize="15sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
